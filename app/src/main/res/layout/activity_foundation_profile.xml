<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foundation_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johncarter.thelon.admin_side.foundation_profile">


    <ImageView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:src="@drawable/login_background"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView7" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="100dp"
        android:src="@drawable/a"
        android:id="@+id/vPic"
        android:layout_width="100dp"
        android:layout_below="@+id/profDesc"
        android:elevation="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethelon Foundation"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintLeft_toRightOf="@+id/vPic"
        android:layout_marginStart="15dp"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closing the gap between Intention and Action"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat"
        android:textStyle="italic"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:id="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            android:layout_marginTop="260dp"
            android:id="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="                      lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsumlorem ipsum lorem ipsum lorem ipsumlorem ipsumlorem ipsum"
            android:gravity="fill_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView13" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities Held:"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:id="@+id/textView8" />


        <android.support.v7.widget.RecyclerView
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:id="@+id/foundation_activities"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp" />

</android.support.constraint.ConstraintLayout>

</ScrollView>
