<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/portfolio_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/portfolio_card_image"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/home_backpic"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/portfolio_card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_24dp"
            android:layout_gravity="top|end"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/portfolio_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding Program"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/portfolio_card_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_gravity="right"
            android:layout_marginTop="55dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:text="This feeding program reminds me of that kid that inspired me a lot to do good things"/>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:alpha=".5"
            android:background="#D2CCB7"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="150dp"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="7dp">
        <ImageView
            android:id="@+id/portfolio_card_add_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_desc"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Caption"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Pictures"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>


</android.support.v7.widget.CardView>


