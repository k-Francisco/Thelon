<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/portfolio_card"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/portfolio_card_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/home_backpic"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/portfolio_card_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_24dp"
            android:layout_gravity="top|end"/>

        <TextView
            android:id="@+id/portfolio_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding Program"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/portfolio_card_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_gravity="right"
            android:layout_marginTop="65dp"
            android:gravity="left"
            android:text="This feeding program reminds me of that kid that inspired me a lot to do good things"/>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:alpha=".5"
            android:background="#D2CCB7"
            android:layout_gravity="bottom|center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>


