<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_performance2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#545454"
    tools:context="com.example.johncarter.thelon.Performance.Performance2">

    <include android:id="@+id/nav_toolbar"
        layout="@layout/toolbar_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_toolbar">



        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="440dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_inputs">

            <TextView
                android:id="@+id/totalActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/leaderboard"
                android:textStyle="bold"
                android:textSize="32sp"
                android:text="19"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_below="@+id/totalActivities"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="Activities Attended"
                android:gravity="center"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/totalPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/leaderboard"
                android:text="520"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalPoints"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="Points Earned"
                android:gravity="center"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/volunteerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:text="Christopher Colum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/volunteerName"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energy:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="70"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passion:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="90"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flexibility:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="30"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creativity:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Player:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friendliness:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="80"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reliability:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="40"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commitment:"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <ProgressBar
                        android:id="@+id/progress8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="100"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="70dp"
                android:background="@color/leaderboard"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Activities Per Week:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="44dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Commends:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="44dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_alignParentBottom="true"
                android:text="5.7"
                android:textColor="@color/leaderboard"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                android:textColor="@color/leaderboard"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                android:text="30"/>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/performancePic"
            android:layout_height="100dp"
            android:src="@drawable/bill_bill"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

    </FrameLayout>

</RelativeLayout>
