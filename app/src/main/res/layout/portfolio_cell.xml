<?xml version="1.0" encoding="utf-8"?>

<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    folding-cell:additionalFlipsCount="2"
    folding-cell:animationDuration="1300"
    folding-cell:backSideColor="@color/bgBackSideColor"
    folding-cell:cameraHeight="30"
    android:id="@+id/cell">

    <!-- CONTENT (UNFOLDED) LAYOUT (MUST BE AT LEAST 2x times BIGGER than content layout bellow)-->
    <include layout="@layout/portfolio_cell_content" />

    <!-- TITLE (FOLDED) LAYOUT (MUST BE AT LEAST 2x times SMALLER than content layout above) -->
    <include layout="@layout/portfolio_cell_title" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="77dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/ribbon_done2"

        android:rotation="15"
        />

</com.ramotion.foldingcell.FoldingCell>

