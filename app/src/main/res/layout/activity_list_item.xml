<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_marginBottom="7dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="0dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="#C21A01"
        android:layout_marginTop="5dp"
        android:id="@+id/frap">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:background="#323232"></FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_white"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feeding Program"
        android:layout_toRightOf="@+id/frap"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/actName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday, Dec 8, 10:00"
        android:id="@+id/actDate"
        android:layout_below="@+id/actName"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/frap"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:text="Edit"
        android:background="@drawable/square_black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/editBtn"/>

    <TextView
        android:id="@+id/deleteBtn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editBtn"
        android:layout_alignParentRight="true"
        android:text="Delete"
        android:background="#C21A01"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>