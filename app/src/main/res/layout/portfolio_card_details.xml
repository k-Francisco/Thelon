<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hosted by Rise Above Foundation"
        android:id="@+id/portfolio_host"
        android:transitionName="portfolioHost"
        android:layout_centerHorizontal="true"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:rating="4.5"
        android:id="@+id/portfolio_ratingbar"
        android:transitionName="portfolio"
        android:layout_below="@id/portfolio_host"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_more"
        android:id="@+id/view_more"
        android:layout_below="@id/portfolio_ratingbar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>