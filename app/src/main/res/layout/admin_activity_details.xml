<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/frame1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/feed1"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:alpha="0.7"
            android:background="#000000"/>
        />
    </FrameLayout>

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_admin_delete_activity"
                android:layout_marginRight="14dp"
                android:layout_alignBottom="@+id/frame1"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="11dp"/>

    <ImageView
        android:id="@+id/editBtn"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_admin_edit_activity"
        android:layout_toLeftOf="@id/deleteBtn"
        android:layout_alignBottom="@+id/frame1"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"/>


    <TextView
        android:id="@+id/activity_name"
        android:layout_below="@+id/frame1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Feeding Program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_name"
        android:layout_marginTop="15dp"
        android:alpha=".5"
        android:background="#000000"
        android:id="@+id/line2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:id="@+id/activity_host_holder"
        android:layout_below="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/host_picture"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_redalyc_logo_1"/>

        <TextView
            android:id="@+id/host_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rise Above Foundation Cebu Inc."/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_host_holder"
        android:layout_marginTop="5dp"
        android:alpha=".5"
        android:background="#000000"
        android:id="@+id/line3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Details:"
        android:id="@+id/label3"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/line3"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar_2"
        android:layout_below="@+id/label3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/calendar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec. 6, 2016 at 11:00 am"
        android:layout_toEndOf="@+id/calendar"
        android:layout_alignBottom="@+id/calendar"
        android:layout_marginLeft="10dp"
        android:id="@+id/dateAndtTime" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_placeholder"
        android:layout_below="@+id/calendar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:id="@+id/placeholder"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basak, Pardo, Cebu City"
        android:layout_toEndOf="@+id/placeholder"
        android:layout_alignBottom="@+id/placeholder"
        android:layout_marginLeft="10dp"
        android:id="@+id/location" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_businessman"
        android:layout_below="@+id/placeholder"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:id="@+id/requirements"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free for all"
        android:layout_toEndOf="@+id/requirements"
        android:layout_alignBottom="@+id/requirements"
        android:layout_marginLeft="10dp"
        android:id="@+id/occupation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_telephone"
        android:layout_below="@+id/requirements"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:id="@+id/contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09257772302 / Anton Wycoco"
        android:layout_toEndOf="@+id/contact"
        android:layout_alignBottom="@+id/contact"
        android:layout_marginLeft="10dp"
        android:id="@+id/contacts" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/contact"
        android:layout_marginTop="12dp"
        android:alpha=".5"
        android:background="#000000"
        android:id="@+id/line4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/label2"
        android:layout_below="@+id/line4"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Going Volunteers"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label2"
        android:layout_marginTop="10dp"
        android:id="@+id/volunteersFrame"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/volunteersFrame"
        android:layout_marginTop="20dp"
        android:alpha=".5"
        android:background="#000000"
        android:id="@+id/line5"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/label"
        android:layout_below="@+id/line5"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Associated Pictures"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginTop="10dp"
        android:id="@+id/ascPicsFrame">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ascPicsFrame"
        android:layout_marginTop="20dp"
        android:alpha=".5"
        android:background="#000000"
        android:id="@+id/line6"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/qrLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event QR"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:layout_below="@+id/line6"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/qrCodeImg"
        android:layout_below="@+id/qrLabel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
</ScrollView>