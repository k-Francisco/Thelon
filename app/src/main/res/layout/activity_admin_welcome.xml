<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F0000"
    tools:context="com.example.johncarter.thelon.admin_side.admin_welcome">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/e"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotleft"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        android:layout_marginStart="155dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotright"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        android:layout_marginEnd="155dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Ethelon"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where we take you a step closer to the
        hearts of passionate volunteers"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/textView6" />

    <Button
        android:layout_width="263dp"
        android:layout_height="54dp"
        android:id="@+id/setupProfile"
        android:background="@drawable/login_google"
        android:text="Set Up Profile"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        style="@style/AlertDialog.AppCompat"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</android.support.constraint.ConstraintLayout>
