<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imgPicDetails"
            android:src="@drawable/home_backpic"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Epsum"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/imgPicDetails"
            android:layout_marginTop="10dp"
            android:id="@+id/eventName"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_share_black"
            android:layout_below="@+id/imgPicDetails"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/referBtn"
            android:scaleX="2"
            android:scaleY="2"
            />

        <ImageView
            android:id="@+id/joinBtn"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_checked_black"
            android:layout_below="@+id/imgPicDetails"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/referBtn"
            android:layout_marginRight="5dp"
            android:scaleY="2"
            android:scaleX="2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/eventName"
            android:layout_marginTop="10dp"
            android:id="@+id/ratingTitle"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:id="@+id/ratingBar"
            android:isIndicator="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ratingBar"
            android:layout_marginTop="10dp"
            android:alpha=".5"
            android:background="#000000"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dp"
            android:id="@+id/descriptionTitle"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Epsum"
            android:layout_below="@+id/descriptionTitle"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/details"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/details"
            android:layout_marginTop="20dp"
            android:alpha=".5"
            android:background="#000000"
            android:id="@+id/line2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Associated Pics"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="10dp"
            android:id="@+id/ascPics"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shit"
            android:layout_below="@+id/ascPics"
            android:layout_marginTop="10dp">

            <include
                layout="@layout/home_details_list"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/shit"
            android:layout_marginTop="20dp"
            android:alpha=".5"
            android:background="#000000"
            android:id="@+id/line3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Similar Activities"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/line3"
            android:layout_marginTop="10dp"
            android:id="@+id/similarTitle"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shit2"
            android:layout_below="@+id/similarTitle"
            android:layout_marginTop="10dp">

            <include
                layout="@layout/home_details_list"
                />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
