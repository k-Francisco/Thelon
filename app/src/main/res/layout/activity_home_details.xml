<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_backpic"
        android:id="@+id/pic1"
        android:transitionName="home_details_trans"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/pic1"
        android:layout_marginTop="0dp"
        android:alpha="1"
        android:background="#000000"
        android:id="@+id/line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Feeding Program"
        android:id="@+id/actTitle"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hostpic"
        android:src="@drawable/ic_redalyc_logo_1"
        android:layout_below="@id/actTitle"
        android:layout_marginLeft="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actTitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="italic"
        android:text="Hosted by Rise Above Foundation"
        android:id="@+id/host"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_heart"
        android:layout_below="@+id/line"
        android:layout_marginTop="3dp"
        android:layout_marginRight="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow"
        android:layout_below="@+id/line"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/host"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ratingBar"
        android:isIndicator="true"
        android:rating="4.5"
        android:stepSize="0.1"
        />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ratingBar"
        android:layout_marginTop="10dp"
        android:id="@+id/tab_menu"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#000000">

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_frame"
        android:layout_below="@id/tab_menu"
        android:layout_marginTop="10dp"
        >

    </FrameLayout>
</RelativeLayout>
</ScrollView>
