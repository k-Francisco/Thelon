<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_leader_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johncarter.thelon.leaderboard_tab.LeaderBoard">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="342dp"
        android:id="@+id/leaderboard_listView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></ListView>

    <ImageView
        android:layout_width="385dp"
        android:layout_height="220dp"
        android:scaleType="fitStart"
        android:alpha=".8"
        android:src="@drawable/leaderboard_black"
        app:layout_constraintBottom_toTopOf="@+id/leaderboard_listView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEADERBOARD"
        android:id="@+id/leaderboard_text"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/leaderboard_pic"
        android:id="@+id/leaderboard_prime_pic"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/leaderboard_text" />

    <TextView
        android:text="Current Rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/leaderboard_prime_pic"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.39"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Points earned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/leaderboard_prime_pic"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.39"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="KRISTIAN FRANCISCO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/leaderboard_prime_pic"
        app:layout_constraintBottom_toTopOf="@+id/leaderboard_listView"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointsEarned"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintLeft_toRightOf="@+id/leaderboard_prime_pic"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.37" />

    <TextView
        android:text="pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pts"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/pointsEarned"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rank"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintRight_toLeftOf="@+id/leaderboard_prime_pic"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.42" />

    <TextView
        android:text="st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/st"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintLeft_toRightOf="@+id/rank"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</android.support.constraint.ConstraintLayout>
